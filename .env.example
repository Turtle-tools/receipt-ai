# Receipt AI Configuration
# Copy to .env and fill in your values

# App
APP_ENV=development
APP_SECRET_KEY=your-secret-key-here

# Database
DATABASE_URL=postgresql://user:password@localhost:5432/receipt_ai

# AI Extraction
OPENAI_API_KEY=sk-your-openai-key
# Or use Anthropic
ANTHROPIC_API_KEY=sk-ant-your-anthropic-key

# QuickBooks Online
QBO_CLIENT_ID=your-qbo-client-id
QBO_CLIENT_SECRET=your-qbo-client-secret
QBO_REDIRECT_URI=http://localhost:8000/api/qbo/callback
QBO_ENVIRONMENT=sandbox  # sandbox or production

# Storage (S3-compatible)
STORAGE_TYPE=local  # local, s3, r2
S3_BUCKET=receipt-ai-uploads
S3_REGION=us-east-1
S3_ACCESS_KEY=your-access-key
S3_SECRET_KEY=your-secret-key
# For Cloudflare R2
R2_ACCOUNT_ID=your-account-id
R2_ENDPOINT=https://your-account-id.r2.cloudflarestorage.com

# Optional: Stripe for billing
STRIPE_SECRET_KEY=sk_test_your-stripe-key
STRIPE_WEBHOOK_SECRET=whsec_your-webhook-secret
